package member.main;

import java.util.Scanner;
import member.store.*;

public class Main {

	public static void main(String[] args) {
		
		Scanner in = new Scanner(System.in);
		int i =0; 
		String name="";
		String addy="";
		double don = 0.0;
		
		System.out.println("Enter your Id\n");
		i = in.nextInt();
		System.out.println("Enter your name");
		name=in.nextLine();
		System.out.println("Enter your Donation Amount");
		don=in.nextDouble();
		System.out.println("Enter your Address");
		addy=in.nextLine();

		
		System.out.println("Id:" + i + "\tName:" + name +"\tAddress:" + addy+ "\tDonation:"+ don);
	}

}
